<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentB"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text z wnętrza fragmentu b"
        android:padding="10dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/message_in_frag_b_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Brak wiadomości od frag a"
        tools:text="To jest tekst próbny"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/frag_b_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:hint="dane do wysłania do frag a"/>

    <Button
        android:id="@+id/send_frag_b_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Wyślij do frag A"
        android:layout_margin="10dp"
        android:padding="10dp"/>
</LinearLayout>